<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fabricadeplugins.ssm26" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <name>SSM26</name>
    <description>SSM-26 SAFE SENDER MESSENGER</description>
    <author email="contato@fabricadeplugins.com.br" href="https://fabricadeplugins.tec.br/">Fabrica de Plugins</author>
    
    <content src="index.html" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#b4b4b4" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="34" />
        
        <icon density="ldpi" height="36" src="www/assets/images/icones/36.png" width="36" />
        <icon density="mdpi" height="57" src="www/assets/images/icones/57.png" width="57" />
        <icon density="hdpi" height="72" src="www/assets/images/icones/72.png" width="72" />
        <icon density="xhdpi" height="96" src="www/assets/images/icones/96.png" width="96" />
        <icon density="xxhdpi" height="144" src="www/assets/images/icones/144.png" width="144" />
        <icon density="xxxhdpi" height="192" src="www/assets/images/icones/192.png" width="192" />
    </platform>

    <platform name="ios">
        <splash src="www/assets/images/icones/1024x1024.png" />

        <preference name="deployment-target" value="13.0" />
        <preference name="WKWebViewOnly" value="true" />
        
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <icon height="20" src="www/assets/images/icones/20.png" width="20" />
        <icon height="29" src="www/assets/images/icones/29.png" width="29" />
        <icon height="40" src="www/assets/images/icones/40.png" width="40" />
        <icon height="50" src="www/assets/images/icones/50.png" width="50" />
        <icon height="57" src="www/assets/images/icones/57.png" width="57" />
        <icon height="58" src="www/assets/images/icones/58.png" width="58" />
        <icon height="60" src="www/assets/images/icones/60.png" width="60" />
        <icon height="72" src="www/assets/images/icones/72.png" width="72" />
        <icon height="76" src="www/assets/images/icones/76.png" width="76" />
        <icon height="80" src="www/assets/images/icones/80.png" width="80" />
        <icon height="87" src="www/assets/images/icones/87.png" width="87" />
        <icon height="100" src="www/assets/images/icones/100.png" width="100" />
        <icon height="114" src="www/assets/images/icones/114.png" width="114" />
        <icon height="120" src="www/assets/images/icones/120.png" width="120" />
        <icon height="144" src="www/assets/images/icones/144.png" width="144" />
        <icon height="152" src="www/assets/images/icones/152.png" width="152" />
        <icon height="167" src="www/assets/images/icones/167.png" width="167" />
        <icon height="1024" src="www/assets/images/icones/1024x1024.png" width="1024" />
    </platform>

    <plugin name="cordova-plugin-ionic-webview" spec="^5.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />

</widget>